#!/usr/bin/env expect --

if {[lindex $argv 2]} {
	set flag "-readwrite"
} else {
	set flag "-readonly"
}

spawn hdiutil attach "[lindex $argv 0]" -mountpoint "[lindex $argv 1]" -private -nobrowse -noautoopen -noautofsck -noverify $flag

expect {
	"Software License" {
		exp_send "q"
		exp_continue
	}
	"Agree Y/N?" {
		exp_send "y\r"
		exp_continue
	}
	"/dev/" {
		interact
	}
}
